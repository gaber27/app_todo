<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16sp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hi"
            android:textColor="#757575"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:text="Gaber"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/notification"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_marginTop="0dp"
            android:paddingTop="8dp">

            <!-- using linear layout to store multiple view
             inside a Horizontal Scroll View -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <!-- multiple button views to show a
                  scrollable horizontal list -->
                <Button
                    android:id="@+id/C"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#28067796"
                    android:padding="4dp"
                    android:text="Today\n28 Nov"
                    android:textColor="#067796" />

                <Button
                    android:id="@+id/Co"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F6F6F6"
                    android:padding="4dp"
                    android:text="tue\n29 Nov"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/L"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F6F6F6"
                    android:padding="4dp"
                    android:text="wed\n30 Nov"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/Ha"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F6F6F6"
                    android:padding="4dp"
                    android:text="thu\n1 dec"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/Hah"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F6F6F6"
                    android:padding="4dp"
                    android:text="fri\n2 dec"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/ge"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F6F6F6"
                    android:padding="4dp"
                    android:text="sat\n3 dec"
                    android:textColor="@color/black" />
            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:text="My Tasks"
            android:textColor="#000000"
            android:textSize="18sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="0dp"
            android:paddingTop="8dp">

            <!-- using linear layout to store multiple view
             inside a Horizontal Scroll View -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <!-- multiple button views to show a
                  scrollable horizontal list -->
                <Button
                    android:id="@+id/C1"
                    android:layout_width="111dp"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#FFE6E7"
                    android:padding="4dp"
                    android:text="All Tasks"
                    android:textColor="#067796"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/C2"
                    android:layout_width="111dp"
                    android:layout_height="65dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F6F6F6"
                    android:padding="4dp"
                    android:text="Done ✅"
                    android:textColor="@color/black"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/c3"
                    android:layout_width="111dp"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F6F6F6"
                    android:padding="4dp"
                    android:text="Wating⏳"
                    android:textColor="@color/black"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">
            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Study"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/c8"
                    android:layout_width="366dp"
                    android:layout_height="68dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#E9FFEB"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:paddingStart="8dp"
                    android:text="Study Mobile Programming"
                    android:textColor="@color/black">

                </Button>
                <Button
                    android:id="@+id/c7"
                    android:layout_width="366dp"
                    android:layout_height="68dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#DFF5FE"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:paddingStart="8dp"
                    android:text="Mobile Programming Assignment"
                    android:textColor="@color/black">

                </Button>

                <Button
                    android:id="@+id/c5"
                    android:layout_width="366dp"
                    android:layout_height="58dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#DFE2FE"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:paddingStart="8dp"
                    android:text="Stochastic Process Project"
                    android:textColor="@color/black">

                </Button>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/tasks"
            android:layout_width="366dp"
            android:layout_height="61dp"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:padding="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text=" Add New Task + "
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp">

        </Button>


    </LinearLayout>

</LinearLayout>