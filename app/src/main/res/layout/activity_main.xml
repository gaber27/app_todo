<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2C5"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16px"
        android:paddingStart="16px"
        android:paddingLeft="16px"
        android:paddingTop="16px"
        android:paddingEnd="16px"
        android:paddingRight="16px"
        android:paddingBottom="16px"
        app:srcCompat="@drawable/asset_1_1"
        tools:srcCompat="@drawable/asset_1_1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8sp"
        android:text="ToDo List ðŸ’Ž"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16sp"
        android:text="The Eaisest way to list and track \n your daily and monthly  tasks"
        android:textColor="#747474"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

    <Button
        android:id="@+id/splash"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:checkable="false"
        android:padding="14sp"
        android:backgroundTint="@color/black"
        android:text="Get Started âš¡ï¸"
        app:cornerRadius="16sp" />
</LinearLayout>