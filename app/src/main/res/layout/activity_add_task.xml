<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/arrowbackk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                app:srcCompat="@drawable/arrow_left"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/notification"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:text="Add New Task"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:text="Task Name"
            android:textColor="#000000" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#A1000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#08000000"
                android:hint="eg: Homework"
                android:paddingTop="24dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:text="Select Tag"
            android:textColor="#000000" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="0dp"
            android:paddingTop="8dp">

            <!-- using linear layout to store multiple view
             inside a Horizontal Scroll View -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <!-- multiple button views to show a
                  scrollable horizontal list -->
                <Button
                    android:id="@+id/C1"
                    android:layout_width="111dp"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F0F0F0"
                    android:padding="4dp"
                    android:text="📚 Study"
                    android:textColor="#000000"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/C2"
                    android:layout_width="111dp"
                    android:layout_height="65dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F0F0F0"
                    android:padding="4dp"
                    android:text="💻 Work"
                    android:textColor="@color/black"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/c3"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F0F0F0"
                    android:padding="4dp"
                    android:text="📺 Video"
                    android:textColor="@color/black"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/c4"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F0F0F0"
                    android:padding="4dp"
                    android:text="🤾‍♂️ Entertainment"
                    android:textColor="@color/black"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:text="Select Date"
            android:textColor="#000000" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingTop="8dp">

            <!-- using linear layout to store multiple view
             inside a Horizontal Scroll View -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <!-- multiple button views to show a
                  scrollable horizontal list -->
                <Button
                    android:id="@+id/C5"
                    android:layout_width="111dp"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#E6F9FF"
                    android:padding="4dp"
                    android:text="Today"
                    android:textColor="#067796"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/C6"
                    android:layout_width="111dp"
                    android:layout_height="65dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F0F0F0"
                    android:padding="4dp"
                    android:text="29 Nov"
                    android:textColor="#9C000000"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/c7"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F0F0F0"
                    android:padding="4dp"
                    android:text="30 Nov"
                    android:textColor="#9C000000"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/c8"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F0F0F0"
                    android:padding="4dp"
                    android:text="1 Dec"
                    android:textColor="#9C000000"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:text="Select Time"
            android:textColor="#000000" />

        <TimePicker
            android:id="@+id/simpleTimePicker"
            android:layout_width="376dp"
            android:layout_height="133dp"
            android:layout_marginTop="16sp"
            android:background="#F0F0F0"
            android:paddingTop="0dp"
            android:timePickerMode="spinner" />

        <Button
            android:id="@+id/c11"
            android:layout_width="366dp"
            android:layout_height="61dp"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:padding="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Done "
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp">

        </Button>

        <!-- orange background color for the time picker -->


        <!--on below line we are creating a
            button for date picker-->


    </LinearLayout>

</LinearLayout>